<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Screen Title -->
        <TextView
            android:id="@+id/screenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weather ~ Forecast"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#7B1FA2"
            android:fontFamily="cursive"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Selected City Name -->
        <TextView
            android:id="@+id/cityNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Top Row: Map and Satellite Images -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mapImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:contentDescription="Map Image"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/satelliteImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:contentDescription="Satellite Image"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <!-- Middle Row: Current Weather -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:contentDescription="Weather Icon"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/currentWeatherDetails"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Current Weather Details"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center_vertical" />
        </LinearLayout>

        <!-- Bottom Row: Forecast Weather -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/forecastWeatherDetails"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Forecast Weather Details"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center_vertical" />

            <ImageView
                android:id="@+id/forecastWeatherIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:contentDescription="Forecast Weather Icon"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
